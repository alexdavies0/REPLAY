<div class="container-fluid">
<h1>All Games</h1>
  <div class="row">
    <% @games.each do |game| %>
      <div class="col-xs-12 col-sm-4">
        <div class="card-product">
          <img src="<%= game.image_url %>">
          <div class="card-product-infos">
            <h4><%= link_to game.title, game_path(game) %></h4>
            <p><%= game.description %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
