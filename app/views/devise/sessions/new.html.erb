

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div style="width: 600px; margin: auto; background-color:white">
  <div class="form-inputs" style="margin: 30px">
    <h2 style="padding-top:30px; padding-bottom:30px">Log in</h2>
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions" style="margin: 30px; padding-bottom: 30px">
    <%= f.button :submit, "Log in", class: "btn btn-default btn-primary button_login" %>
    <%= render "devise/shared/links" %>
  </div>
  <% end %>
</div>
